docker-compose.yml
version: '2'
services:
  main:
    container_name: main
    build: .
    links:
      - web
    volumes_from:
      - web
    volumes:
      - ./artifacts:/home/dz1/boxfuse-sample-java-war-hello/target:rw
   web:
    container_name: web
    image: tomcat
    volumes:
      - ./artifacts:/usr/local/tomcat/webapps:rw
    ports:
      - "8080:8080"
 
Dockerfile
FROM ubuntu:18.04
RUN apt-get update
RUN apt-get install maven -y
RUN apt-get install default-jdk -y
RUN apt-get install git -y
RUN mkdir /home/dz1/
RUN git clone https://github.com/boxfuse/boxfuse-sample-java-war-hello.git /home/dz1/boxfuse-sample-java-war-hello
WORKDIR /home/dz1/boxfuse-sample-java-war-hello/
RUN mvn package
CMD ["/bin/bash","run"]
